generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?

  // 多角色支持
  roles UserRole[]

  // 邀请关系追踪
  invitedById  String?
  invitedBy    User?   @relation("UserInvites", fields: [invitedById], references: [id])
  invitedUsers User[]  @relation("UserInvites")

  // 使用的邀请码追踪
  usedInviteCodeId String?
  usedInviteCode   InviteCode? @relation("UsedInviteCode", fields: [usedInviteCodeId], references: [id])

  conversations Conversation[]
  inviteCodes   InviteCode[]   @relation("CreatedInviteCodes") // 我创建的邀请码 (作为邀请人)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Role {
  id        String     @id @default(cuid())
  name      String     @unique // "ADMIN", "USER", "INVITER"
  canInvite Boolean    @default(false)
  users     UserRole[]
}

model UserRole {
  userId String
  roleId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  role   Role   @relation(fields: [roleId], references: [id], onDelete: Cascade)

  @@id([userId, roleId])
}

model Conversation {
  id        String    @id @default(cuid())
  userId    String
  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  title     String?
  messages  Message[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([userId])
}

model Message {
  id             String       @id @default(cuid())
  conversationId String
  conversation   Conversation @relation(fields: [conversationId], references: [id], onDelete: Cascade)
  role           String // "user" or "assistant"
  content        String       @db.Text
  thought        String?      @db.Text // AI 思考内容
  createdAt      DateTime     @default(now())

  @@index([conversationId])
}

// 邀请码表
model InviteCode {
  id        String    @id @default(cuid())
  code      String    @unique // 邀请码，如 "BETA2026"
  maxUses   Int       @default(1) // 默认一次性使用，也可设置多次
  usedCount Int       @default(0) // 已使用次数
  expiresAt DateTime? // 过期时间

  creatorId String // 谁创建的这个邀请码
  creator   User   @relation("CreatedInviteCodes", fields: [creatorId], references: [id])

  usedByUsers User[] @relation("UsedInviteCode")

  createdAt DateTime @default(now())
}

// 邮箱验证码表
model EmailVerificationCode {
  id        String   @id @default(cuid())
  email     String
  code      String // 4-6位验证码
  expiresAt DateTime // ⏳ 10分钟后过期
  createdAt DateTime @default(now())

  @@index([email])
  @@index([email, code])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
